package librarysystem;

public class Main {
public static void main(String[] args) {

Author author = new Author("Jose Rizal");  
    Book book = new Book("Noli Me Tangere", author);  
    Library library = new Library(book);  

    System.out.println(library.displayLibraryData());  
}

}

AUTHOR CLASS

package librarysystem;

public class Author {
private String name;

public Author(String name) {  
    this.name = name;  
}  

public String getName() {  
    return name;  
}  

public void identify() {  
    System.out.print("This class represents the author of a book. ");  
}

}

BOOK CLASS

package librarysystem;

public class Book {
private String title;
private Author author;

public Book(String title, Author author) {  
    this.title = title;  
    this.author = author;  
}  

public String getBookInfo() {  
    return "Book Title: " + title + ", Author: " + author.getName();  
}  

public void identify() {  
    System.out.print("This class stores book information in the system. ");  
}

}

LIBRARY CLASS

package librarysystem;

public class Library {
private Book book;

public Library(Book book) {  
    this.book = book;  
}  

public String displayLibraryData() {  
    return book.getBookInfo();  
}  

public void identify() {  
    System.out.print("This class manages books inside the library. ");  
}

}
